@model IEnumerable<MyERP.Admin.Models.BankViewModel>

@{
    ViewBag.Title = "Banka";
}

<h2>Banka</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Yeni Banka</a>
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Account)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpenBalance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CloseBalance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>

        <th class="all">Eylemler</th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Account)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OpenBalance)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CloseBalance)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CityName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CountryName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsActive)
    </td>

    <td class="text-nowrap">
        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
        @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-default btn-sm" })
        @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
    </td>
</tr>
}

</table>
