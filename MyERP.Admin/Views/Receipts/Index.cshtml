@model IEnumerable<MyERP.Admin.Models.ReceiptViewModel>

@{
    ViewBag.Title = "Fiş";
}

<h2>Fiş</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Yeni Fiş</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerFullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BankName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReceivedAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BalAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>

        <th>Eylemler</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CustomerFullName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BankName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UnitPrice)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ReceivedAmount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BalAmount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsActive)
    </td>

    <td class="text-nowrap">
        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
        @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-default btn-sm" })
        @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
    </td>
</tr>
}

</table>
